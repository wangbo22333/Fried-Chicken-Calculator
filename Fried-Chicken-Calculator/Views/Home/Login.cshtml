@{
    ViewBag.Title = "Login";
}
@*<h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>*@
<link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">
    function post() {
        var account = $("#txt_Account").val();
        var password = $("#txt_Password").val();
        //alert(localStorage.getItem("money"));
        $.ajax({
            type: "POST",
            url: "/Home/Login",
            async: true,
            dataType: "json",
            data: { "Account": account, "Password": password },
            success: function (result) {
                //console.log(result);
                if (result.Data == "success") {
                    alert("登陆成功！");
                    $("#loginstate").css('display', 'none');
                    window.location.href = "/Home/Index";
                } else {
                    alert("登陆失败，请重新登录！");
                }

            }
        });
    }
</script>

<style>
    .login-div-outer{
        width: 100%;
        background: black;
        display: block;
        height: 0;
        padding-bottom:50%;
        margin-top: 4em;
        margin-bottom: 4em;
        border-radius: 3em;
        background-image: url(/Content/login_bg.png);
        background-size: cover;
        box-shadow: 10px 10px 20px #ddd;
        transition: box-shadow 2s, border 2s;
        border: 1px solid rgba(210, 210, 210, 1.0);
        overflow: hidden;
    }
    .login-div-outer:hover{
        box-shadow: 5px 5px 20px #666;
        border: 1px solid rgba(110, 110, 110, 1.0);
        transition: box-shadow 1s, border 1s;
    }
    .login-label{
        color: rgba(255, 255, 255, 0.8);
        font-size: 55px;
        font-weight: lighter;
        margin-left: 160px;
        margin-top: 1.6em;
        margin-bottom: 0px;
    }
    .login-div-main{
        background-color: rgba(0, 0, 0, 0);
        transition: background-color 2s, opacity 2s;
        display: block;
        width: 100%;
        height: 50em;
        opacity: 0.80;
    }
    .login-div-main:hover{
        background-color: rgba(0, 0, 0, 0.6);
        transition: background-color 1s, opacity 1s;
        opacity: 0.9;
    }
    .login-form{
        margin-left: 160px;
    }
    .login-form label{
        color: white;
        font-weight: lighter;
        margin-top: 1em;
        margin-bottom: 0em;
    }
    .login-form-text{
        outline: none;
        width: 30em;
        height: 2em;
        line-height: 2em;
        font-size: 30px;
        border: none;
        padding-left: 0.5em;
        padding-right: 0.5em;
        transition: background-color 1s;
        font-weight: lighter;
    }
    .login-form-text :focus{
        background-color: rgb(204, 225, 240);
    }
    .login-form-button{
        outline: none;
        width: 30em;
        height: 4em;
        border: none;
        background-color: #f0776c;
        margin-top: 2.5em;
        color: white;
    }
    .login-div-qrcode{
        position: relative;
        float: right;
        width: 200px;
        top: 210px;
        right: 340px;
        opacity: 0.7;
    }
</style>

<div class="login-div-outer">
    <div class="login-div-main">
        <label class="login-label">登录</label>
        <img class="login-div-qrcode" src="/Content/qrcode.jpg">

        <form class="login-form">
            <label>用&nbsp;户&nbsp;名</label><br>
            <input type="text" id="txt_Account" class="login-form-text" required><br>
            <label>密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码</label><br>
            <input type="password" id="txt_Password" class="login-form-text" required><br>
            <input type="button" id="login" value="登&nbsp;&nbsp;录" onclick="post()" class="login-form-button" >
        </form>
    </div>
</div>

