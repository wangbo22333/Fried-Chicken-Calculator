@{
    ViewBag.Title = "Home Page";
}

<script src="/Scripts/jquery-3.3.1.js"></script>

<style type="text/css">
    .calculator_div {
        margin-top: 10em;
        display: block;
        width: 34em;
        height: 32em;
        margin-left: auto;
        margin-right: auto;
        border-radius: 1em 1em 1em 1em;
        background: #575757;
        padding-top: 1em;
        z-index: 1;
    }
    .result_panel {
        display: block;
        width: 100%;
        padding: 0.3em;
        height: 3em;
        text-align: right;
        font-size: 35px;
        color: white;
    }
    .button_panel {
        display: block;
        width: 100%;
        padding: 0.3em;
        height: 20em;
        z-index: 0;
        text-align: center;
    }
    .button_panel button {
        background-color: #131313;
        border: 1px solid #1c1c1c;
        width: 23%;
        height: 3.4em;
        color: #fff;
        outline: none;
        margin-left: 0.1em;
        margin-right: 0.1em;
        margin-top: 0.4em;
        cursor: default;
        font-size: 20px;
    }
        .button_panel button:hover {
            background-color: #767676;
            border: 1px solid #919191;
            transition: background-color 0.25s;
            transition: border 0.1s;
        }
        .button_panel button:active {
            background-color: #838383;
            border: 1px solid #9D9D9D;
            transition: background-color 0.25s;
            transition: border 0.1s;
        }
</style>

<div class="calculator_div">
    <div class="result_panel">
        0
    </div>
    <div class="button_panel">
        <button class="button_number">7</button> <button class="button_number">8</button> <button class="button_number">9</button> <button class="button_operator">+</button>
        <button class="button_number">4</button> <button class="button_number">5</button> <button class="button_number">6</button> <button class="button_operator">-</button>
        <button class="button_number">1</button> <button class="button_number">2</button> <button class="button_number">3</button> <button class="button_operator">×</button>
        <button>/</button> <button class="button_number">0</button> <button class="button_equal">=</button> <button class="button_operator">÷</button>
    </div>
</div>

<script>
    var a = 0;
    var b = 0;
    var target = "a";
    var op = "+";
    $(".button_number").click(function () {
        c = $(this).text();

        if (target == "a") {

            a = a * 10 + parseInt(c);

            $(".result_panel").text(a);

        } else {

            b = b * 10 + parseInt(c);

            $(".result_panel").text(a);
            $(".result_panel").append(" " + op + " ");
            $(".result_panel").append(b);

        }

    });

    $(".button_operator").click(function () {
        target = "b";
        op = $(this).text();
        $(".result_panel").text(a);
        $(".result_panel").append(" " + op + " ");
    });

    $(".button_equal").click(function () {
        $(".result_panel").text(a);
        $(".result_panel").append(" " + op + " ");
        $(".result_panel").append(b);
        $(".result_panel").append(" = ");
        switch (op) {
            case "-":
                $(".result_panel").append(a - b);
                break;
            case "×":
                $(".result_panel").append(a * b);
                break;
            case "÷":
                if (b == 0) {
                    $(".result_panel").append(a / b);
                } else {
                    alert("除数不能为0!");
                }
                break;
            default:
                $(".result_panel").append(a + b);
        }
    });

</script>

<div class="row">
    <div class="col-md-4">
        <h2>@ViewBag.Message</h2>
        <p>
            这里后面显示一下历史记录
        </p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
    </div>
   
</div>